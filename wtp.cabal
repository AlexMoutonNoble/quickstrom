cabal-version:       >=1.10

name:                wtp
version:             0.1.0.0
license-file:        LICENSE
author:              Oskar WickstrÃ¶m
maintainer:          oskar.wickstrom@ingka.com
build-type:          Simple
extra-source-files:  CHANGELOG.md

library
  exposed-modules:    WTP.Core
                    , WTP.Syntax
                    , WTP.Syntax.Dhall
                    , WTP.Verify
  build-depends:      base >=4.12 && <4.13
                    , data-fix
                    , deriving-compat
                    , dhall
                    , freer-simple
                    , hashable
                    , mtl
                    , prettyprinter
                    , recursion-schemes
                    , text
                    , unordered-containers
  hs-source-dirs:     lib
  default-language:   Haskell2010

executable wtp
  main-is:            Main.hs
  build-depends:      base >=4.12 && <4.13
                    , dhall
                    , wtp
                    , text
  hs-source-dirs:     wtp
  default-language:   Haskell2010

test-suite wtp-test
  type:               exitcode-stdio-1.0
  main-is:            Main.hs
  hs-source-dirs:     test
  other-modules:      WTP.SyntaxTest
  build-depends:      base
                    , wtp
                    , freer-simple
                    , hedgehog
                    , mtl
                    , simple-ltl
                    , tasty
                    , tasty-discover
                    , tasty-hedgehog
                    , tasty-hspec
                    , unordered-containers
